<UserControl x:Class="HN.Bangumi.Uwp.Controls.StaffItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="using:HN.Bangumi.API.Models"
             d:DataContext="{d:DesignInstance Type=models:Staff}"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Width="162"
              Height="162">
            <Image Source="{Binding Path=Images.Medium}"
                   Stretch="UniformToFill" />
        </Grid>
        <Grid Grid.Row="1"
              Width="162"
              Padding="8,4,8,4">
            <TextBlock Text="{Binding Converter={StaticResource StaffNameConverter}}"
                       TextWrapping="Wrap" />
        </Grid>
    </Grid>
</UserControl>